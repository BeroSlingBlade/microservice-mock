<configurations>
    <!-- Supported GET requests -->
    <configuration type="GET" url="/mock/get">
        <resource>mock/sample-get.json</resource>
    </configuration>

    <!-- Supported POST requests -->
    <configuration type="POST" url="/mapng/traxis-structure-service/v1/pl/pl/vodStructure">
    </configuration>
    <configuration type="POST" url="/mock/post">
        <resource-group>
            <resource>
                <xpath>/sample/message[@id = '1']</xpath>
                <resource>mock/sample-post1.json</resource>
            </resource>
            <resource>
                <xpath>/sample/message[@id = '2']</xpath>
                <resource>mock/sample-post2.json</resource>
            </resource>
        </resource-group>
    </configuration>
</configurations>

